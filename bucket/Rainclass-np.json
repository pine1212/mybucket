    "url": "https://desktop.yuketang.cn/RainClassroom_5.2.2.6667_preview.exe#/installer.exe",
    "installer": {
        "script": [
            "$process = Start-Process \"$dir\\installer.exe\" -ArgumentList @('/S', \"/D=$dir\") -Verb RunAs -PassThru",
            "do { Start-Sleep -Milliseconds 200 } until ($process.HasExited)"
        ]
    },
    "uninstaller": {
        "file": "Uninstall.exe",
        "args": "/S"
    },
    "pre_uninstall": "Stop-Process -Name 'everything' -ErrorAction SilentlyContinue"
}
